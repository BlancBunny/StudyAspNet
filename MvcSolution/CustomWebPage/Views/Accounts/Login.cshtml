@model CustomWebPage.Models.Account

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<form class="form" asp-action="Login">
    <div class="mb-3">
        <input type="email" class="form-control form-control-lg" placeholder="Email"
               asp-for="Email" aria-label="Email" aria-describedby="email-addon">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <input type="password" class="form-control form-control-lg" placeholder="Password"
               asp-for="Password" aria-label="Password" aria-describedby="password-addon">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="rememberMe">
        <label class="form-check-label" for="rememberMe">Remember me</label>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0">Sign in</button>
    </div>
</form>