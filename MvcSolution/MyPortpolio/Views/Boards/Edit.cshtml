@model MyPortpolio.Models.Board

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container">
    <div class="col-lg col-md ml-auto mr-auto">
        <div class="card card-login">
            <div class="section section-boards">
                <div class="row">
                    <div class="col-md-11 ml-auto mr-auto">
                        <h3 class="text-center card-title">글 수정</h3>
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Idx" />
                            <div class="form-group">
                                <label asp-for="Subject" class="control-label"></label>
                                <input asp-for="Subject" class="form-control" />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Writer" class="control-label"></label>
                                <input asp-for="Writer" class="form-control" />
                                <span asp-validation-for="Writer" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Contents" class="control-label"></label>
                                <textarea class="form-control-range" rows="10"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="RegDate" class="control-label"></label>
                                <input asp-for="RegDate" class="form-control" readonly />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />&nbsp;
                                <a asp-action="Index" class="btn btn-secondary">to List</a>
                            </div>
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>


