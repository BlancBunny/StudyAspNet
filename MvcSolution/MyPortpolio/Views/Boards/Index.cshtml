@model IPagedList<MyPortpolio.Models.Board>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common

<div class="container">
    <div class="col-lg col-md ml-auto mr-auto">
        <div class="card card-Board">
            <div class="section section-boards" style="padding:40px 0">
                <div class="row">
                    <div class="col-md-11 ml-auto mr-auto">
                        <h3 class="text-center" style="color:black; margin-top:0px; font-weight:bold">게시판</h3>
                        <p>
                            <a asp-action="Create">Create New</a>
                        </p>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.First().Idx)
                                    </th>
                                    <th>
                                        제목@*@Html.DisplayNameFor(model => model.First().Subject)*@
                                    </th>
                                    <th>
                                        작성자@*@Html.DisplayNameFor(model => model.First().Writer)*@
                                    </th>
                                    <th>
                                        내용@*@Html.DisplayNameFor(model => model.First().Contents)*@
                                    </th>
                                    <th>
                                        작성일@*@Html.DisplayNameFor(model => model.First().RegDate)*@
                                    </th>
                                    <th>
                                        조회수@*@Html.DisplayNameFor(model => model.First().ReadCount)*@
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Idx)
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Idx">
                                            @Html.DisplayFor(modelItem => item.Subject)
                                        </a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Writer)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Contents)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RegDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReadCount)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Idx">수정</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Idx">삭제</a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>

                        <div class="pull-center">
                            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", 
                                                new { page }), new PagedListRenderOptionsBase
                                                {
                                                    LiElementClasses = new string[] { "page-item" }, 
                                                    PageClasses = new string[] { "page-link" },
                                                    Display = PagedListDisplayMode.IfNeeded
                                                })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
