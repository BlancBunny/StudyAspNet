@model IEnumerable<MyPortpolio.Models.Board>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container">
    <div class="col-lg col-md ml-auto mr-auto">
        <div class="card card-Board">
            <div class="section section-boards">
                <div class="row">
                    <div class="col-md-11 ml-auto mr-auto">
                        <h3 class="text-center card-title">게시판</h3>
                        <p>
                            <a asp-action="Create">Create New</a>
                        </p>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Idx)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Subject)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Writer)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Contents)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RegDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ReadCount)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Idx)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Subject)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Writer)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Contents)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RegDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReadCount)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Idx">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Idx">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Idx">Delete</a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
