@model IEnumerable<MyPortpolio.Models.Manage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container">
    <div class="col-lg col-md ml-auto mr-auto">
        <div class="card card-Board">
            <div class="section section-boards" style="padding:40px 0">
                <div class="row">
                    <div class="col-md-11 ml-auto mr-auto">
                        <h3 class="text-center" style="color:black; margin-top:0px; font-weight:bold">게시판</h3>
                        <p>
                            <a asp-action="Create">글쓰기</a>
                        </p>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Cate)
                                    </th>
                                    <th>
                                        
                                        @Html.DisplayNameFor(model => model.Subject)
                                    </th>
                                    @*<th>
                                        @Html.DisplayNameFor(model => model.Contents)
                                    </th>*@
                                    <th>
                                        @Html.DisplayNameFor(model => model.RegDate)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cate)
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.Idx">
                                                @Html.DisplayFor(modelItem => item.Subject)
                                            </a>
                                        </td>
                                        @*<td>
                                            @Html.DisplayFor(modelItem => item.Contents)
                                        </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RegDate)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Idx">Edit</a> |
                                            
                                            <a asp-action="Delete" asp-route-id="@item.Idx">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>