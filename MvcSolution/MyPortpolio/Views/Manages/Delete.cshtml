@model MyPortpolio.Models.Manage

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="container">
    <div class="col-lg col-md ml-auto mr-auto">
        <div class="card card-login">
            <div class="section section-boards">
                <div class="row">
                    <div class="col-md-8 ml-auto mr-auto">
                        <h1>Delete</h1>
                        <h3>Are you sure you want to delete this?</h3>
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Cate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Cate)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Subject)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Subject)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Contents)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.Raw(Model.Contents)
                            </dd>
                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Idx" />
                            <input type="submit" value="Delete" class="btn btn-danger" /> |
                            <a asp-action="Index">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
