@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_ContactLayout.cshtml";
}
<div class="container">
    <div class="col-lg-12 col-md-12 ml-auto mr-auto">
        <div class="card card-login">
            <form class="form" method="" action="">
                <div class="card-header card-header-primary text-center">
                    <h4 class="card-title">Contact</h4>
                </div>
                <p class="description text-center">문의내용 입력</p>
                <div class="card-body">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="material-icons">badge</i>
                            </span>
                        </div>
                        <input type="text" class="form-control" placeholder="이름...">
                    </div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="material-icons">title</i>
                            </span>
                        </div>
                        <input type="email" class="form-control" placeholder="이메일...">
                    </div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="material-icons">toc</i>
                            </span>
                        </div>
                        <textarea class="form-control" placeholder="내용을 입력하세요..."></textarea>

                    </div>
                </div>
                <div class="footer text-center">
                    <a href="#pablo" class="btn btn-primary btn-link btn-wd btn-lg">문의하기</a>
                </div>
            </form>
        </div>
    </div>
</div>
